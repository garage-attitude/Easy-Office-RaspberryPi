export PATH=$PATH:/usr/local/bin
export NODE_PATH=$NODE_PATH:/usr/local/lib/node_modules

case "$1" in
start)
exec forever --sourceDir=/home/pi/Documents/GarageProjects/easy-office -p /home/pi/Documents/GarageProjects/easy-office app.js
;;
stop)
exec forever stop --sourceDir=/home/pi/Documents/GarageProjects/easy-office app.js
;;
*)
echo "Usage: /etc/init.d/easyOfficeService {start|stop}"
exit 1
;;
esac
exit 0

